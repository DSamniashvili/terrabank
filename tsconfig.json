{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "types": ["react-native", "jest", "node"],
    "typeRoots": ["src/types", "./node_modules/@types"],
    "baseUrl": "./src/",
    "paths": {
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "navigators/*": ["navigators/*"],
      "screens/*": ["screens/*"],
      "services/*": ["services/*"],
      "store/*": ["store/*"],
      "theme/*": ["theme/*"],
      "translations/*": ["translations/*"],
      "types/*": ["types/*"],
      "assets/*": ["assets/*"]
    }
  }
}
